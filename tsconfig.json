{
  "compilerOptions": {
    "target": "ES2023",
    "strict": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
